@font-face {
  font-family: "CF Samurai Bob";
  // src: url(/assets/CFSamuraiBob.ttf) format("truetype");
  src: url('<%= asset_path("CFSamuraiBob.ttf") %>') format("truetype");
}

$logo-font: "CF Samurai Bob", sans-serif;
$main-font: "Avenir Next", sans-serif;

body {
  margin: 0px;
  font-family: $main-font;
}

nav {
  margin: 0em;
  padding: 0.5em;
  height: 3em;
  background-color: black;
}

nav a {
  font-size: 0.8em;
  vertical-align: middle;
  color: white;
  text-decoration: none;
  font-family: $main-font;
}

nav a.nav-logo {
  font-size: 2.4em;
  font-family: $logo-font;
}

.main-container {
  padding-left: 0.75em;
  padding-right: 0.75em;
}
